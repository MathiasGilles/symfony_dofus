{% extends 'base.html.twig' %}
{% block title %}Ressource
{% endblock %}
{% block body %}
	<div>
		<div class="col-lg-12">
			<div class="card shadow mb-4">
				<div class="card-header py-3 d-flex justify-content-between">
					<h6 class="m-0 font-weight-bold ">Ressource</h6>
					<a href="{{path('ressource_new')}}" class="d-block btn btn-sm btn-success">
						+ Create ressource
					</a>
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table id="example" class="display" style="width:100%">
							<thead>
								<tr>
									<th>Name</th>
									<th>Description</th>
									<th>Price</th>
									<th>Monster</th>
									<th>Equipements</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>

								{% for ressource in ressource %}
									<tr>
										<th>{{ ressource.name }}</th>

										<td>{{ ressource.description }}</td>
										<td>{{ ressource.price }}</td>
										<td>
											{% for monster in ressource.monsters %}
												<li>
													{{ monster.name}}
												</li>
											{% endfor %}
										</td>
										<td>
											<a class="d-inline-block" href="{{ path('ressource_edit', { id: ressource.id }) }}">
												<i class="text-warning fas fa-edit fa-fw"></i>
											</a>

											<a class="d-inline-block" onclick="confirmSupr('{{ ressource.name }}','{{path('ressource_delete', { id: ressource.id })  }}' )">
												<i class="text-danger fas fa-trash-alt fa-fw"></i>
											</a>
										</td>
									</tr>
								</td>
							</tbody>
						</tr>
					{% endfor %}
				</tbody>
				<tfoot>
					<tr>
						<th>Name</th>
						<th>Description</th>
						<th>Price</th>
						<th>Monster</th>
						<th>Equipements</th>
						<th>Action</th>

					</tr>
				</tfoot>
			</table>
		</div>
	</div>
</div></div></div>{% endblock %}
