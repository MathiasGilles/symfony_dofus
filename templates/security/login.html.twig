{% extends "base.html.twig" %}

{% block body %}
<h1>Log In</h1>

{% if error %}
<div class="alert alert-danger">
    {{ error.messageKey | trans(error.messagedata, 'security') }}
</div>
{% endif %}
<form action="{{path('security_login')}}" method="post">
    <div class="form-group">
        <input placeholder="Email adress" required name="_username" type="text" class="form-control" value="{{last_username}}">
        <br>
        <input placeholder="Password" required name="_password" type="password"
            class="form-control">
    </div>
    <div class="form-group">
        <button type="submit" class="d-block btn btn-sm btn-success">Log In</button>
    </div>
</form>
{% endblock %}