{% extends 'base.html.twig' %}
{% block title %}Equipment
{% endblock %}
{% block body %}
	<div>
		<div class="col-lg-12">
			<div class="card shadow mb-4">
				<div class="card-header py-3 d-flex justify-content-between">
					<h6 class="m-0 font-weight-bold ">Equipment</h6>
					<a href="{{path('equipement_new')}}" class="d-block btn btn-sm btn-success">
						+ Create equipment
					</a>
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table id="example" class="display" style="width:100%">
							<thead>
								<tr>
									<th>Name</th>
									<th>Price</th>
									<th>Panoplie</th>
									<th>Ressources</th>
									<th>Categorie</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>

								{% for equipement in equipements %}
									<tr>
										<th>{{ equipement.name }}</th>

										<td>{{ equipement.price }}
											kamas</td>
										<td>
											{% if equipement.panoplie %}
												{{ equipement.panoplie.name}}
											{% endif %}
										</td>
										<td>
											{% for ressources in equipement.ressources %}
												<li>
													{{ ressources.name}}
												</li>
											{% endfor %}
										</td>
										<td>
											{% if equipement.categorie %}
												{{equipement.categorie.name}}
											{% endif %}
										</td>
										<td>
											<a class="d-inline-block" href="{{ path('equipement_edit', { id: equipement.id }) }}">
												<i class="text-warning fas fa-edit fa-fw"></i>
											</a>

											<a class="d-inline-block" onclick="confirmSupr('{{ equipement.name }}','{{path('equipement_delete', { id: equipement.id })  }}')">
												<i class="text-danger fas fa-trash-alt fa-fw"></i>
											</a>
										</td>
									</tr>
								</td>
							</tbody>
						</tr>
					{% endfor %}
				</tbody>
				<tfoot>
					<tr>
						<th>Name</th>
						<th>Price</th>
						<th>Panoplie</th>
						<th>Ressources</th>
						<th>Categorie</th>
						<th>Action</th>

					</tr>
				</tfoot>
			</table>
		</div>
	</div>
</div></div></div>{% endblock %}
