{% extends 'base.html.twig' %}
{% block title %}Categorie
{% endblock %}
{% block body %}
	<div>
		<div class="col-lg-12">
			<div class="card shadow mb-4">
				<div class="card-header py-3 d-flex justify-content-between">
					<h6 class="m-0 font-weight-bold ">Categorie</h6>
					<a href="{{path('categorie_new')}}" class="d-block btn btn-sm btn-success">
						+ Create categorie
					</a>
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table id="example" class="display" style="width:100%">
							<thead>
								<tr>
									<th>Name</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>

								{% for categorie in categories %}
									<tr>
										<th>{{ categorie.name }}</th>

										<td>
											<a class="d-inline-block" href="{{ path('categorie_edit', { id: categorie.id }) }}">
												<i class="text-warning fas fa-edit fa-fw"></i>
											</a>

											<a class="d-inline-block" onclick="confirmSupr('{{ categorie.name }}','{{path('categorie_delete', { id: categorie.id })  }}') ">
												<i class="text-danger fas fa-trash-alt fa-fw"></i>
											</a>
										</td>
									</tr>
								</td>
							</tbody>
						</tr>
					{% endfor %}
				</tbody>
				<tfoot>
					<tr>
						<th>Name</th>
						<th>Action</th>

					</tr>
				</tfoot>
			</table>
		</div>
	</div>
</div></div></div>{% endblock %}
